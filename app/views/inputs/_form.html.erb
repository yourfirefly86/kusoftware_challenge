<%= form_with(model: input) do |form| %>
  <% if input.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(input.errors.count, "error") %> prohibited this input from being saved:</h2>

      <ul>
        <% input.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_area :email %>
  </div>

  <div class="field">
    <%= form.label :firstname %>
    <%= form.text_area :firstname %>
  </div>

  <div class="field">
    <%= form.label :lastname %>
    <%= form.text_area :lastname %>
  </div>

  <div class="field">
    <%= form.label :language %>
    <%= form.text_area :language %>
  </div>

  <div class="field">
    <%= form.label :proficiency %>
    <%= form.number_field :proficiency %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
